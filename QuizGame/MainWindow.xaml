<Window x:Class="QuizGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizGame"
        mc:Ignorable="d"
        Title="MainWindow"
        KeyDown="Window_KeyDown"
        Focusable="True"
        Loaded="Window_Loaded"
        Height="450" Width="800"
        MinWidth="300" MinHeight="400">
    <Window.Background>
        <ImageBrush ImageSource="Images/UnityDefaultSky.png" />
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="Title"
                   Text="The GAME"
                   FontWeight="Bold" 
                   Foreground="White"
                   FontSize="60" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>
        <Grid Grid.Row="1">
            <TextBox x:Name="InputBox"
                FontSize="20"
                Margin="100,0,100,0"
                Visibility="Collapsed" />
            <ComboBox x:Name="ModeStatus"
                      SelectedIndex="0"
                      Width="100"
                      Margin="0,0,0,0"
                      FontSize="18">
                <ComboBoxItem Content="Easy"/>
                <ComboBoxItem Content="Nomal"/>
                <ComboBoxItem Content="Hard"/>
            </ComboBox>

        </Grid>
        
        <Grid Grid.Row="3">
            <TextBlock x:Name="Check"
                       Text="" 
                       Margin="100,0,0,0"
                       FontSize="16"/>
        </Grid>
        <Grid Grid.Row="4">
            <TextBlock x:Name="History"
                       Margin="100,0,0,0"
                       FontSize="20"
                       FontWeight="Bold"
                       Text="" />
        </Grid>
        
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="StartButton"
                    Content="スタート" 
                    Grid.Column="1" 
                    VerticalAlignment="Center"
                    Width="120" 
                    FontWeight="Bold"
                    FontSize="20"
                    Background="#f6f6f6"
                    Click="StartButton_Click"/>
            <Button x:Name="MethodButton"
                    Content="操作方法" 
                    Grid.Column="3" 
                    VerticalAlignment="Center"
                    Width="120" 
                    FontWeight="Bold"
                    FontSize="20"
                    Background="#f6f6f6"
                    Click="MethodButton_Click"/>
            <Button x:Name="StopButton"
                    Content="ゲームを閉じる" 
                    Grid.Column="5"
                    VerticalAlignment="Center"
                    Width="120" 
                    FontWeight="Bold"
                    FontSize="20"
                    Background="#f6f6f6"
                    Click="StopButton_Click"/>
        </Grid>
    </Grid>
</Window>
